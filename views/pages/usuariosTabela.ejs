<%- include('../partials/header'); %>

    <div class="container py-5">
        <div class="row">
            <div class="col-6">
                <h1>Lista de Usuários</h1>
            </div>

            <div class="col-6 text-right">
                <a href="/usuarios" class="btn btn-secondary my-3 text-center">Visualizar Timeline</a>
            </div>
        </div>

        <table class="table table-sm table-hover table-light table-striped table-borderless shadow">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>e-mail</th>
                    <th>telefone</th>
                    <th>Usuário</th>
                    <th>Senha</th>
                    <th>Mensagem</th>
                    <th>Cor</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                <% usuarios.forEach(function(usu) { %>
                    <tr>
                        <td id="nome">
                            <a href="/usuarios/usuarioFiltrado/<%= usu._id %>" class="btn">
                                <%= usu.nome %>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/usuarios/usuarioFiltrado/<%= usu._id %>" class="btn">
                                <%= usu.cpf %>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/usuarios/usuarioFiltrado/<%= usu._id %>" class="btn">
                                <%= usu.email %>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/usuarios/usuarioFiltrado/<%= usu._id %>" class="btn">
                                <%= usu.telefone %>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/usuarios/usuarioFiltrado/<%= usu._id %>" class="btn">
                                <%= usu.nomeU %>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/usuarios/usuarioFiltrado/<%= usu._id %>" class="btn">
                                <%= usu.senha %>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/usuarios/usuarioFiltrado/<%= usu._id %>" class="btn">
                                <%= usu.mensagem %>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/usuarios/usuarioFiltrado/<%= usu._id %>" class="btn">
                                <div style="background-color: <%= usu.cor %>;">
                                    <%= usu.cor %>
                                </div>
                            </a>
                        </td>
                        <td class="text-center d-flex my-auto">
                            <a href="/usuarios/editarAdm/<%= usu._id %>" class="btn btn-sm btn-light shadow m-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"> 
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
                            </a>
                            <a href="/usuarios/deletarAdm/<%= usu._id %>" class="btn btn-sm btn-dark shadow m-1" onclick="return confirm('Tem certeza que deseja apagar?');">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    </div>

    <%- include('../partials/footer'); %>