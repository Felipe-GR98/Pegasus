<%- include('../partials/header'); %>
    <main class="container py-5">
        <h1>Editar Usuário</h1>

        <form action="/usuarios/editarUsuarios" method="POST" name="formulario"
            class="needs-validation mt-5 mt-5 bg-light shadow-lg p-5 rounded text-left" novalidate>

            <!-- nome e cpf-->
            <div class="form-group row">
                <div class="col-sm-6">
                    <label for="nome">Nome</label>
                    <input type="text" class="form-control" id="nome" name="nome" placeholder="nome completo" minlength="3" required value="<%= usu.nome %>" readonly data-toggle="tooltip" data-placement="bottom" title="Você não pode editar esse campo">
                    <div class="invalid-feedback">
                        Preenchimento obrigatório.
                    </div>
                </div>
                <div class="col-sm-6">
                    <label for="cpf">CPF</label>
                    <input type="text" class="form-control" id="cpf" name="cpf" placeholder="cpf (somente números)" minlength="11" maxlength="11" required onblur="validarCPF()" value="<%= usu.cpf %>" readonly data-toggle="tooltip" data-placement="bottom" title="Você não pode editar esse campo">
                    <div class="invalid-feedback">
                        Preenchimento obrigatório.
                    </div>
                </div>
            </div>

            <!-- email e telefone-->
            <div class="form-group row">
                <div class="col-sm-6">
                    <label for="email">e-mail</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="e-mail" required value="<%= usu.email %>">
                    <div class="invalid-feedback">
                        Preenchimento obrigatório.
                    </div>
                </div>
                <div class="col-sm-6">
                    <label for="telefone">telefone</label>
                    <input type="text" class="form-control" id="telefone" name="telefone" placeholder="telefone com ddd (somente números)" minlength="10" onkeypress="$(this).mask('(00) 000000009')" required value="<%= usu.telefone %>">
                    <div class="invalid-feedback">
                        Preenchimento obrigatório.
                    </div>
                </div>
            </div>

            <!-- usuario e senha-->
            <div class="form-group row">
                <div class="col-sm-6">
                    <label for="nomeU">Usuário</label>
                    <input type="text" class="form-control" id="nomeU" name="nomeU" minlength="4" placeholder="nome de usuário (mínimo 4 caracteres)" required value="<%= usu.nomeU %>">
                    <div class="invalid-feedback">
                        Preenchimento obrigatório.
                    </div>
                </div>
                <div class="col-sm-6">
                    <label for="senha">Senha</label>
                    <input type="text" class="form-control" id="senha" name="senha" placeholder="senha (6 caracteres)" minlength="6" maxlength="6" required value="<%= usu.senha %>">
                    <div class="invalid-feedback">
                        Preenchimento obrigatório.
                    </div>
                </div>
            </div>

            <!-- mensagem e cor-->
            <div class="form-group row">
                <div class="col-sm-10">
                    <label for="mensagem">mensagem</label>
                    <input type="text" class="form-control" id="mensagem" name="mensagem" maxlength="4" placeholder="mensagem com no máximo 4 carateres" required value="<%= usu.mensagem %>">
                    <div class="invalid-feedback">
                        Preenchimento obrigatório.
                    </div>
                </div>
                <div class="col-sm-2">
                    <label for="cor">Cor</label>
                    <input type="color" class="form-control" id="cor" name="cor" required value="<%= usu.cor %>">
                    <div class="invalid-feedback">
                        Preenchimento obrigatório.
                    </div>
                </div>
            </div>

            <div>
                <input type="hidden" name="id" value="<%= usu._id %>" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg px-5 m-5">Enviar</button>

                <a href="/usuarios" class="btn btn-lg btn-secondary px-5 m-5">Cancelar</a>

                <a href="/usuarios/deletarUsuarios/<%= usu._id %>" class="btn btn-lg btn-danger px-5 m-5"
                    onclick="return confirm('Tem certeza que deseja apagar?');">Excluir</a>
            </div>
        </form>
        
    </main>

<%- include('../partials/footer'); %>